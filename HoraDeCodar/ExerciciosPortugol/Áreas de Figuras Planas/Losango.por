programa {
  funcao inicio() {
    
   inteiro diagonalmaior
   inteiro diagonalmenor

   escreva ("Sobre seu Losango: Informe o tamanho da Diagonal Maior Dele ")
   leia (diagonalmaior)

   
   escreva ("Sobre seu Losango: Informe o tamanho da Diagonal Menor Dele ")
   leia (diagonalmenor)

  inteiro area = diagonalmaior * diagonalmenor /2 

   escreva ("A área do seu losango é = ", area)
  }
}
